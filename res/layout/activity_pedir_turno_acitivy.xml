<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.turno.miturnoandroid.PedirTurnoAcitivy"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

         <TextView
            android:id="@+id/txtAvisame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35px"
            android:text="Avisame Faltando" 
            android:textColor="@android:color/white"
            />
         
         <EditText 
             android:id="@+id/txtNumerosTurnosEspers"
             android:layout_width="match_parent"
           	 android:layout_height="wrap_content"
           	 android:inputType="numberDecimal"
             />
            
        
        <Button
            android:id="@+id/btnPedirTurno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pedir Turno" 
            android:onClick="pedir"
            />

        <TextView
            android:id="@+id/txtTurno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35px"
            android:text="" 
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/txtCodigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35px"
            android:text="" 
            android:textColor="@android:color/white"
            />
        
    </LinearLayout>

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.turno.miturnoandroid.CanelarActivity"
    android:background="#282828"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
	
         <TextView
            android:id="@+id/txtTurnoCancelarPokemon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Estas seguro que deseas cancelar tu turno?"
            android:textColor="#ffa800"
            android:textSize="35px" />
        
         <TextView
            android:id="@+id/txtvacio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="35px" />
        
        <TextView
            android:id="@+id/txtTurnoCancelar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="#ffa800"
            android:textSize="35px" />

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#464646"
            android:onClick="cancelar"
            android:text="Cancelar Turno"
            android:textColor="#ffa800"
            android:textSize="50px"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>